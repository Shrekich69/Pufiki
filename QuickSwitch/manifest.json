{
    "manifest_version": 2,
    "name": "QuickSwitch",
    "version": "1.3.3",

    "description": "Переключение между соседними вкладками",
    "icons": {
        "16": "/icons/penicat16.png",
        "32": "/icons/penicat32.png",
        "48": "/icons/penicat48.png",
        "128": "/icons/penicat128.png"
    },

    "background": {
        "scripts": [
            "scripts/backgroundScripts/catchEvents.js",
            "scripts/backgroundScripts/restoreTab.js",
            "scripts/backgroundScripts/switchTab.js"
        ],
        "persistent": false
    },
    "commands": {
        "prev_tab": {
            "suggested_key": {
                "default": "Alt+Q"
            },
            "description":"Пред. вкладка"
        },
        "first_tab": {
            "suggested_key": {
                "default": "Shift+Alt+Q"
            },
            "description": "Переключиться на первую вкладку"
        },
        "next_tab": {
            "suggested_key": {
                "default": "Alt+E"
            },
            "description": "След. вкладка"
        },
        "last_tab": {
            "suggested_key": {
                "default": "Shift+Alt+E"
            },
            "description":"Переключиться на последнюю вкладку"
        },
        
        "new_tab": {
            "suggested_key": {
                "default": "Alt+W"
            },
            "description": "Новая вкладка"
        },
        "restore_tab": {
            "suggested_key": {
                "default": "Alt+S"
            },
            "description": "Восстановить закрытую вкладку"
        }
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "{c6dd37ca-d7f8-4353-a9fe-501ea90ce226}",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    },

    "permissions": [
        "tabs",
        "activeTab",
        "history"
    ]
}