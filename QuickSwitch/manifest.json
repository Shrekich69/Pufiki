{
    "manifest_version": 2,
    "name": "QuickSwitch",
    "version": "1.2.1",

    "description": "Переключение между соседними вкладками",
    "icons": {
        "16": "/icons/penicat16.png",
        "32": "/icons/penicat32.png",
        "48": "/icons/penicat48.png",
        "128": "/icons/penicat128.png"
    },

    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/keyHandler.js"]
        }
    ],
    "commands": {
        "prev_tab": {
            "suggested_key": {
                "default": "Alt+Q"
            },
            "description":"Пред. вкладка"
        },
        "next_tab": {
            "suggested_key": {
                "default": "Alt+E"
            },
            "description": "След. вкладка"
        },
        "new_tab": {
            "suggested_key": {
                "default": "Alt+W"
            },
            "description": "Новая вкладка"
        }
    },

    "permissions": [
        "tabs",
        "activeTab"
    ]
}